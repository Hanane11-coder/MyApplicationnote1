<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyNoteApp"
        tools:targetApi="31">

        <!-- Déclaration de l'activité MainLogin comme activité principale -->
        <activity
            android:name=".MainLogin"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Déclaration de l'activité Sign-up -->
        <activity
            android:name=".SignupActivity"
            android:exported="true" />

        <!-- Déclaration de l'activité principale de l'application -->
        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <!-- Autres activités (comme NotesTakeActivity) -->
        <activity
            android:name=".NotesTakeActivity"
            android:exported="false" />

    </application>
</manifest>
